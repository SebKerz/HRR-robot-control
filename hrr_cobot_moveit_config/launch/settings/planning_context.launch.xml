<?xml version="1.0"?>
<launch>
   <arg name="prefix" default="" doc="robot name. Requires a controllers_prefix.yaml file to exist"/>   
   <arg name="gripper" default="false" doc="use robot with attached gripper (currently only wsg_50)"/>
   <arg name="robot_description_name" default="robot_description" doc="URDF parameter name"/>
  
   <arg     if="$(arg gripper)" name="semantic_file" value="$(find hrr_cobot_moveit_config)/config/robot_semantics/hrr_cobot_semantic.xacro"/>
   <arg unless="$(arg gripper)" name="semantic_file" value="$(find hrr_cobot_moveit_config)/config/robot_semantics/hrr_cobot_arm_semantic.xacro"/>
  
   <!-- Load planning context -->
   <param  name="$(arg robot_description_name)_semantic"  command="$(find xacro)/xacro --inorder '$(arg semantic_file)' prefix:=$(arg prefix)"/>
  
   <!-- load kinematics -->
   <group ns="$(arg robot_description_name)_kinematics">
       <rosparam command="load" file="$(find hrr_cobot_moveit_config)/config/kinematics.yaml"/>
   </group>

   <!-- load joint limits-->  
   <group ns="$(arg robot_description_name)_planning/joint_limits">
     <group ns="$(arg prefix)joint_0">
        <rosparam command="load" file="$(find hrr_cobot_moveit_config)/config/joint_limits/joint_0.yaml"/>   
     </group>
     <group ns="$(arg prefix)joint_1">
        <rosparam command="load" file="$(find hrr_cobot_moveit_config)/config/joint_limits/joint_1.yaml"/>   
     </group>
     <group ns="$(arg prefix)joint_2">
        <rosparam command="load" file="$(find hrr_cobot_moveit_config)/config/joint_limits/joint_2.yaml"/>   
     </group>
     <group ns="$(arg prefix)joint_3">
        <rosparam command="load" file="$(find hrr_cobot_moveit_config)/config/joint_limits/joint_3.yaml"/>   
     </group>
     <group ns="$(arg prefix)joint_4">
        <rosparam command="load" file="$(find hrr_cobot_moveit_config)/config/joint_limits/joint_4.yaml"/>   
     </group>
     <group ns="$(arg prefix)jr3_msr_joint">
        <rosparam command="load" file="$(find hrr_cobot_moveit_config)/config/joint_limits/jr3_msr_joint.yaml"/>   
     </group>
     <group ns="$(arg prefix)wsg_50_base_joint_gripper_left">
        <rosparam command="load" file="$(find hrr_cobot_moveit_config)/config/joint_limits/wsg_gripper_joint.yaml"/>   
     </group>
     <group ns="$(arg prefix)wsg_50_base_joint_gripper_right">
        <rosparam command="load" file="$(find hrr_cobot_moveit_config)/config/joint_limits/wsg_gripper_joint.yaml"/>   
     </group>
   </group>

</launch>
